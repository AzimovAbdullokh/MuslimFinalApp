<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ModalPage" />

    <style name="ModalPage.Dialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/ModalPage.DialogWrapper</item>
    </style>

    <style name="ModalPage.DialogWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ModalPage.Animation">
        <item name="android:windowEnterAnimation">@anim/animation_modal_page_slide_up</item>
        <item name="android:windowExitAnimation">@anim/animation_modal_page_slide_down</item>
    </style>


    <style name="PopupMenuDefaultStyle" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
        <item name="android:dropDownVerticalOffset">26dp</item>
        <item name="android:dropDownHorizontalOffset">8dp</item>
        <item name="android:listPreferredItemHeight">52dp</item>
    </style>

    <style name="itemTextStyle.PopupMenuDefaultTextStyle" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>
</resources>