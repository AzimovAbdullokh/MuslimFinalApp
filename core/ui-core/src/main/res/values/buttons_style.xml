<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle.Red" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">45dp</item>
        <item name="android:background">@drawable/button_primary_background</item>
        <item name="android:textAppearance">@style/ButtonTextStyle</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:stateListAnimator">@null</item>
    </style>


    <style name="ButtonTextStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">16dp</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="ButtonStyle.Blue" parent="ButtonStyle.Red">
        <item name="android:background">@drawable/button_secondary_blue_background</item>
    </style>

    <style name="ButtonStyle.BlueSec" parent="ButtonStyle.Red">
        <item name="android:background">@color/blue</item>
    </style>


    <style name="ButtonStyle.Blue.AppStyle" parent="ButtonStyle.Blue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="MaterialBtnNext" parent="Widget.MaterialComponents.Button">
        <item name="rippleColor">@color/teal_200</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="backgroundTint">@color/banana_dark</item>
        <item name="iconSize">@dimen/btnIconSize</item>
        <item name="icon">@drawable/ic_next</item>
        <item name="borderRound">@dimen/cardAllCornersRadius</item>
        <item name="textFillColor">@color/white</item>
        <item name="minWidth">@dimen/testButtonSize</item>
        <item name="android:elevation">@dimen/cardElevation</item>
    </style>

    <style name="MaterialBtnPrev" parent="Widget.MaterialComponents.Button">
        <item name="rippleColor">@color/teal_200</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="backgroundTint">@color/apple_darkest</item>
        <item name="iconSize">@dimen/btnIconSize</item>
        <item name="icon">@drawable/ic_baseline_skip_previous_24</item>
        <item name="borderRound">@dimen/cardAllCornersRadius</item>
        <item name="textFillColor">@color/white</item>
        <item name="minWidth">@dimen/testButtonSize</item>
        <item name="android:elevation">@dimen/cardElevation</item>
    </style>

    <style name="book_question_radio_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/qustion_background</item>
    </style>


</resources>