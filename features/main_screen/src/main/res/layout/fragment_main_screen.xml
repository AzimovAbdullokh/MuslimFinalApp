<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/control_tertiary_active"
    android:orientation="vertical"
    app:layoutDescription="@xml/fragment_main_screen_scene"
    tools:context=".presentation.MainScreenFragment">


    <include
        android:id="@+id/include_toolbar"
        layout="@layout/include_main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent" />


    <include
        android:id="@+id/include_main_card_block"
        layout="@layout/include_main_card_block"
        android:layout_width="match_parent"
        android:layout_height="0dp" />


</androidx.constraintlayout.motion.widget.MotionLayout>