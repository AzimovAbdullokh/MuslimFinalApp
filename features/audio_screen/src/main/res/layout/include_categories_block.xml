<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemCategory"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp">

        <ImageView
            android:id="@+id/coverImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_secondary_blue_background" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center|start"
            android:layout_marginStart="14dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/heart_svgrepo_com" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center|start"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/poppins_extra_bold"
                android:text="@string/saved"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp">

        <ImageView
            android:id="@+id/coverImg2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_secondary_blue_back" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center|start"
            android:layout_marginStart="14dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/playlist_svgrepo_com" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center|start"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/text_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/poppins_extra_bold"
                android:text="@string/playlist"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp">

        <ImageView
            android:id="@+id/coverImg3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_secondary_yellow_back" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center|start"
            android:layout_marginStart="14dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/premium_badge_svgrepo_com" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center|start"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/text_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/poppins_extra_bold"
                android:text="@string/premium"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>